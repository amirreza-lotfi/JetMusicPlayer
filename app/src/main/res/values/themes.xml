<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightSkyBlue</item>
        <item name="colorPrimaryVariant">@color/darkSkyBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightOrange</item>
        <item name="colorOnSurface">?colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="divider">?colorPrimaryVariant</item>

        <item name="textAppearanceHeadline1">@style/Theme.MusicPlayer.Title</item>
        <item name="textAppearanceHeadline4">@style/Theme.MusicPlayer.H4</item>
        <item name="textAppearanceHeadline3">@style/Theme.MusicPlayer.H3</item>
        <item name="textAppearanceHeadline5">@style/Theme.MusicPlayer.H5</item>
        <item name="textAppearanceHeadline6">@style/Theme.MusicPlayer.H6</item>
    </style>
</resources>