<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- use for title of screen-->
    <style name="Theme.MusicPlayer.H1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">20dp</item>
        <item name="lineHeight">20dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/noto_semi_bold</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <!-- use for name of music,-->
    <style name="Theme.MusicPlayer.H2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">14dp</item>
        <item name="lineHeight">20dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/noto_regular</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="Theme.MusicPlayer.H3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="fontFamily">@font/noto_regular</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <!-- use for name of track artists-->
    <style name="Theme.MusicPlayer.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11dp</item>
        <item name="lineHeight">18dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/noto_medium</item>
        <item name="fontFamily">@font/noto_medium</item>
        <item name="android:textColor">?colorSecondary</item>
    </style>

</resources>