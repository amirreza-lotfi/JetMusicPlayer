<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/track"
    android:layout_height="wrap_content"
    android:background="?colorPrimary"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/trackArtPicCardView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:cardCornerRadius="16dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintBottom_toTopOf="@id/seprator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/trackArtPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="musicArt"
            tools:srcCompat="@drawable/ic_launcher_background" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/nameOfTrack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:maxLines="2"
        android:layout_marginTop="2dp"
        android:textAppearance="?textAppearanceHeadline2"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout"
        app:layout_constraintStart_toEndOf="@id/trackArtPicCardView"
        app:layout_constraintTop_toTopOf="@+id/trackArtPicCardView"
        tools:text="Being slim: Is it in our genes??" />

    <ImageView
        android:id="@+id/moreIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/trackArtPicCardView"
        app:srcCompat="@drawable/ic_more_vert_24" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_duration"
        android:paddingHorizontal="4dp"
        android:layout_marginStart="24dp"
        android:paddingVertical="2dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toStartOf="@+id/moreIcon"
        app:layout_constraintTop_toTopOf="@+id/trackArtPicCardView">

        <TextView
            android:id="@+id/trackDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceHeadline3"
            tools:text="4:19" />
    </FrameLayout>

    <TextView
        android:id="@+id/artistOfTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textAppearance="?textAppearanceCaption"
        app:layout_constraintStart_toEndOf="@+id/trackArtPicCardView"
        app:layout_constraintTop_toBottomOf="@+id/nameOfTrack"
        tools:text="Marjan Farsadi" />

    <View
        android:id="@+id/seprator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?colorPrimaryVariant"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>